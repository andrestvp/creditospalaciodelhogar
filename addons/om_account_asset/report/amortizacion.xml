<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <template id="report_amortizacion_card">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2> Financiamiento </h2>

                            <div class="row mt32 mb32" id="informations">
                                <div t-if="doc.name" class="col-auto col-3 mw-100 mb-2">
                                    <strong>Referencia</strong>
                                    <p class="m-0" t-field="doc.name"/>
                                </div>
                                <div t-if="doc.name" class="col-auto col-3 mw-100 mb-2">
                                    <strong>Fecha</strong>
                                    <p class="m-0" t-field="doc.date"/>
                                </div>

                                <div t-if="doc.name" class="col-auto col-3 mw-100 mb-2">
                                    <strong>Cliente</strong>
                                    <p class="m-0" t-field="doc.partner_id"/>
                                </div>
                            </div>


                            <table class="table table-sm o_main_table">
                                    <thead style="display: table-row-group">
                                            <tr>
                                                <th name="th_fecha" class="text-left">Fecha de Vencimiento</th>
                                                <th name="th_pagos" class="text-right">Pagos</th>
                                                <th name="th_acumulada" class="text-right">Amortizaci√≥n Acumulada</th>
                                                <th name="th_saldo" class="text-right">Saldo</th>
                                            </tr>
                                    </thead>
                                    <tbody class="sale-tbody">
                                            <t t-foreach="doc.depreciation_line_ids" t-as="line">

                                                     <tr t-att-class="'bg-200 font-weight-bold o_line_section'">
                                                             
                                                              <td name="td_fecha"><span t-field="line.depreciation_date"/></td>
                                                              <td name="td_pagos" class="text-right"><span t-field="line.amount"/></td>
                                                              <td name="td_acumulada" class="text-right"><span t-field="line.depreciated_value"/></td>
                                                              <td name="td_saldo" class="text-right"><span t-field="line.remaining_value"/></td>
                                                             
                                                     </tr>
                                            </t>
                                    </tbody>
                            </table>




                        </div>
                    </t>
                </t>
            </t>
    </template>    



</odoo>
