<?xml version="1.0" enconding="utf8"?>
<odoo>
     <record id="create_appointment_form" model="ir.ui.view">
        <field name="name">create.appointment.wizard.form</field>
        <field name="model">create.appointment.wizard</field>
        <field name="arch" type="xml">
            <form string="Crete">
                    <group class="oe_title">
                            <field name="ejemplo"/>
                    </group>
                    <footer>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
            </form>
        </field>
    </record>

    <record id="action_create_appointment" model="ir.actions.act_window">
        <field name="name">Create Appointment</field>
        <field name="type">ir.actions.act.window</field>
        <field name="res_model">create.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_appointment_form"></field>
        <field name="target">new</field>
    </record>
</odoo>
